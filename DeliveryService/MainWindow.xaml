<Window x:Class="DeliveryService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeliveryService"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Title="택배 찾기" Height="500" Width="1000">
    <Grid Margin="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Button Margin="100" Grid.Column="0" x:Name="btn_PostReg" Click="Btn_PostReg_Click">택배 등록</Button>
        <Button Margin="100" Grid.Column="1" x:Name="btn_PostDirector" Click="Btn_PostDirector_Click" >택배 관리</Button>
    </Grid>
</Window>
